{
  "name": "@vizality/eslint-config",
  "version": "0.0.2",
  "description": "Shareable ESLint configuration base created for Vizality.",
  "license": "BSD-2-Clause",
  "author": "Dustin Perolio <me@dperolio.com> (https://dperolio.com)",
  "homepage": "https://vizality.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/vizality/packages.git",
    "directory": "@vizality/eslint-config"
  },
  "bugs": "https://github.com/vizality/packages/issues",
  "funding": [
    {
      "type": "paypal",
      "url": "http://paypal.me/vizality"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/vizality"
    },
    {
      "type": "github sponsors",
      "url": "https://github.com/sponsors/dperolio"
    }
  ],
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": false,
    "commitLimit": false,
    "backfillLimit": false,
    "hideCredit": true,
    "startingVersion": "v0.0.1"
  },
  "scripts": {
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "changelog": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.22.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-react": "^7.29.4"
  },
  "devDependencies": {
    "auto-changelog": "^2.4.0"
  }
}
